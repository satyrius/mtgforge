// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

#td-main
  margin 60px
  position relative

#products-list
  h3
    line-height 18px

#td-search
  padding 0 60px

#td-search-results
  text-align center

  .td-card
    position relative

    img
      vertical-align bottom
      margin-bottom 15px
      margin-right 15px
      -moz-border-radius 10px
      -webkit-border-radius 10px
      border-radius 10px
      -moz-box-shadow 0px 2px 7px 2px #999
      -webkit-box-shadow 0px 2px 7px 2px #999
      box-shadow 0px 2px 7px 2px #999
      width 223px
      height 310px

    img:hover
      cursor pointer

    .td-stats
      position absolute
      top -265px
      left - 10px

      .label
        display block
        margin-bottom 5px
        text-align left

#td-card-info
  display none
  background-color #333
  -webkit-box-shadow #000 0 0 20px 2px inset
  box-shadow #000 0 0 20px 2px inset
  padding 40px
  margin 10px 0 20px 0
  width 100%
  text-align left
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box
  position relative

  .td-arrow-wrap
    position absolute
    overflow hidden
    top -22px
    left 50%
    margin-left -30px
    width 29px
    height 50px

  .td-arrow
    height 70px
    width 70px
    position absolute
    pointer-events none
    background-color #333
    -webkit-transform rotate(45deg)
    -moz-transform rotate(45deg)
    transform rotate(45deg)
    -webkit-box-shadow black 0 0 14px 2px inset
    -moz-box-shadow black 0 0 14px 2px inset
    box-shadow black 0 0 14px 2px inset
    top 22px
    left -20px

  img
    border-radius 14px

  .td-card-rules
    color #fff

  .td-card-rules-list
    margin-top 20px
    color #ccc

  .close
    background url(unquote('data:image/gif;base64,')) no-repeat center center
    position absolute
    cursor pointer !important
    height 20px
    width 20px
    top 15px
    right 15px
    z-index 1

  .arrow-btn
    position absolute
    cursor pointer !important
    padding 0
    height 77px
    width 32px
    top 178px
    background-color #454545
    background-image -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0,#303030),color-stop(1,#262626))
    background-image -webkit-linear-gradient(top,#303030,#262626)
    background-image linear-gradient(top,#303030,#262626)
    -webkit-box-shadow 0 1px 0 rgba(255,255,255,.06),1px 1px 0 rgba(255,255,255,.03),-1px -1px 0 rgba(0,0,0,.02),inset 1px 1px 0 rgba(255,255,255,0.05)
    box-shadow 0 1px 0 rgba(255,255,255,.06),1px 1px 0 rgba(255,255,255,.03),-1px -1px 0rgba(0,0,0,.02),inset 1px 1px 0 rgba(255,255,255,0.05)
    color #9f9f9f !important
    border 1px solid #141414
    -webkit-border-radius 2px
    border-radius 2px

    div
      background url(unquote('data:image/png;base64,')) center no-repeat
      display block
      position absolute
      top 0
      bottom 0
      left 0
      right 0
      margin auto
      height 23px
      width 14px

  .arrow-btn:hover
    background-image -webkit-gradient(linear,50% 0%,50% 100%,color-stop(0,#2F2F2F),color-stop(1,#2d2d2d))
    background-image -webkit-linear-gradient(top,#343434,#2d2d2d)
    background-image linear-gradient(top,#2f2f2f,#343434)
    color #afafaf !important
    background-color #3d3d3d
    border 1px solid #191919
    -webkit-box-shadow 0 1px 0 rgba(255,255,255,.09),1px 1px 0 rgba(255,255,255,.05), -1px -1px 0 rgba(0,0,0,.02),inset 1px 1px 0 rgba(255,255,255,.05)
    box-shadow 0 1px 0 rgba(255,255,255,.09), 1px 1px 0 rgba(255,255,255,.05),-1px -1px 0 rgba(0,0,0,.02), inset 1px 1px 0 rgba(255,255,255,.05)

  .arrow-btn.left
    left 0

  .arrow-btn.right
    right 0
    -webkit-transform scaleX(-1)
    transform scaleX(-1)
